{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "aspen",
  "name": "AstralRealms",
  "colors": {
    "primary": "#267ad9",
    "light": "#26d971",
    "dark": "#26d971"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "index",
              "quickstart",
              "development"
            ]
          },
          {
            "group": "Customization",
            "pages": [
              "essentials/settings",
              "essentials/navigation"
            ]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      },
      {
        "tab": "Ville",
        "groups": [
          {
            "group": "Introduction Ville",
            "pages": [
              "ville/introduction"
            ]
          },
          {
            "group": "Menu d'une ville",
            "pages": [
              "ville/roles",
              "ville/membres",
              "ville/banque",
              "ville/parametres"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/light.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "https://discord.gg/astralrealms"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Site web",
      "href": "https://astralrealms.fr/"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "website": "https://astralrealms.fr",
      "discord": "https://discord.gg/astralrealms"
    }
  },
  "appearance": {
    "default": "system"
  },
  "background": {
    "decoration": "gradient"
  }
}
